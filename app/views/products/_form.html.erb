<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>Nombre del reto</p>
    <%= f.text_field :name_product %>
  </div>
  <div class="field">
    <p>Descripcion del reto</p>
    <%= f.text_area :description_product %>
  </div>
  <div class="field">
      <p> Sube una imagen de ayuda para tu reto <%= f.file_field :image %> </p>
  </div>
  <div class="field">
      <p> Sube una video de ayuda para tu reto <%= f.file_field :video %> </p>
  </div>
  <div class="field" style="visibility: hidden;">
    <br>
    <%= f.number_field :price_product, value: 0 %>
  </div>
  <div class="actions">
    <%= f.submit "Crear reto"%>
  </div>
<% end %>
